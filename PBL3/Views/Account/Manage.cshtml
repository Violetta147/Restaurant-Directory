@model PBL3.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Quản lý tài khoản</h4>
                </div>
                <div class="card-body">                    <form asp-action="Manage" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
                            <input asp-for="UserName" class="form-control" readonly />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>                        <div class="d-grid gap-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                Trở về trang chủ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
