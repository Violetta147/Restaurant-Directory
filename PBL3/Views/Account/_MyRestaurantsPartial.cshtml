@using X.PagedList
@model IPagedList<PBL3.ViewModel.RestaurantCardViewModel>

<div class="row">
    @if (Model != null && Model.Any())
    {
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h5 class="mb-1">
                        <i class="fas fa-utensils me-2"></i>
                        Nhà hàng của bạn
                    </h5>
                    <p class="text-muted small mb-0">
                        Hiển thị @Model.Count trong tổng số @Model.TotalItemCount nhà hàng
                    </p>
                </div>
                <div>
                    <a href="#" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>
                        Thêm nhà hàng mới
                    </a>
                </div>
            </div>
        </div>
        
        @foreach (var restaurant in Model)
        {
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card restaurant-card h-100 shadow-sm position-relative">
                    <div class="row g-0 h-100">
                        <div class="col-4">
                            <img src="@(string.IsNullOrEmpty(restaurant.CardImageUrl) ? "/images/default-restaurant.jpg" : restaurant.CardImageUrl)" 
                                 class="img-fluid h-100 w-100" 
                                 alt="@restaurant.Name" 
                                 style="object-fit: cover; border-radius: 0.375rem 0 0 0.375rem;">
                        </div>
                        <div class="col-8">
                            <div class="card-body p-3 d-flex flex-column h-100">
                                <!-- Restaurant Name -->
                                <h6 class="card-title fw-bold mb-2 text-truncate">@restaurant.Name</h6>
                                
                                <!-- Rating -->
                                <div class="mb-2 d-flex align-items-center">
                                    <span class="text-warning fw-bold me-1">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= Math.Round(restaurant.AverageRating) ? "-fill" : "")"></i>
                                        }
                                    </span>
                                    <span class="small fw-bold">@restaurant.AverageRating.ToString("0.0")</span>
                                    <span class="text-muted small ms-1">(@restaurant.ReviewCount)</span>
                                </div>

                                <!-- Cuisine Types -->
                                @if (restaurant.CuisineSummary != null && restaurant.CuisineSummary.Any())
                                {
                                    <div class="mb-2">
                                        <span class="small text-muted">
                                            <i class="bi bi-tag-fill me-1"></i>
                                            @string.Join(", ", restaurant.CuisineSummary.Where(c => !string.IsNullOrEmpty(c)))
                                        </span>
                                    </div>
                                }

                                <!-- Price Range -->
                                @if (!string.IsNullOrEmpty(restaurant.PriceRange))
                                {
                                    <div class="mb-2">
                                        <span class="badge bg-light text-dark border small">
                                            <i class="bi bi-currency-dollar me-1"></i>
                                            @restaurant.PriceRange
                                        </span>
                                    </div>
                                }

                                <!-- Status Badge -->
                                <div class="mb-3">
                                    @if (restaurant.Status == PBL3.Models.RestaurantStatus.Open)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-door-open me-1"></i>Đang mở cửa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-door-closed me-1"></i>Đã đóng cửa
                                        </span>
                                    }
                                </div>

                                <!-- Action Buttons -->
                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <a href="/Restaurant/Details/@restaurant.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye me-1"></i>Xem chi tiết
                                        </a>
                                        <div class="btn-group" role="group">
                                            <a href="#" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil me-1"></i>Chỉnh sửa
                                            </a>
                                            <a href="#" class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-graph-up me-1"></i>Thống kê
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <!-- Pagination -->
        @if (Model.PageCount > 1)
        {
            <div class="col-12">
                <nav aria-label="Restaurant pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="loadMyRestaurants(@(Model.PageNumber - 1)); return false;">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageCount, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="#" onclick="loadMyRestaurants(@i); return false;">@i</a>
                            </li>
                        }
                        
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="loadMyRestaurants(@(Model.PageNumber + 1)); return false;">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="col-12">
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-store fa-4x text-muted"></i>
                </div>
                <h5 class="mb-3">Bạn chưa có nhà hàng nào</h5>
                <p class="text-muted mb-4">
                    Hãy đăng ký nhà hàng đầu tiên của bạn để bắt đầu kinh doanh trên nền tảng của chúng tôi.
                </p>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Đăng ký nhà hàng đầu tiên
                </a>
            </div>
        </div>
    }
</div>

<style>
    .restaurant-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #e0e0e0;
    }

    .restaurant-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .restaurant-card .card-body {
        background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
    }

    .restaurant-card img {
        transition: transform 0.3s ease;
    }

    .restaurant-card:hover img {
        transform: scale(1.05);
    }

    .restaurant-card .btn-group .btn {
        flex: 1;
    }

    .restaurant-card .badge {
        font-size: 0.75rem;
    }

    .pagination .page-link {
        border-color: #25A18E;
        color: #25A18E;
    }

    .pagination .page-item.active .page-link {
        background-color: #25A18E;
        border-color: #25A18E;
    }

    .pagination .page-link:hover {
        background-color: #e8f5f3;
        border-color: #25A18E;
        color: #1e8a77;
    }
</style>
