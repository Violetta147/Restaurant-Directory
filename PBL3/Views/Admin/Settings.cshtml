@* Views/Admin/Settings.cshtml *@
@{
    ViewData["Title"] = "Cài đặt Hệ thống";
}
<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}


<div class="alert alert-danger mt-5">
    <h4><i class="fas fa-exclamation-triangle"></i> XÓA TOÀN BỘ NGƯỜI DÙNG</h4>
    <p><strong>CẢNH BÁO:</strong> Hành động này sẽ xóa vĩnh viễn TẤT CẢ tài khoản người dùng khỏi hệ thống. Thao tác này không thể hoàn tác.</p>
    <p>Chỉ thực hiện nếu bạn chắc chắn và đã sao lưu cơ sở dữ liệu.</p>

    <form asp-controller="Admin" asp-action="DeleteAllUsers" method="post" onsubmit="return confirm('BẠN CÓ CHẮC CHẮN MUỐN XÓA TOÀN BỘ NGƯỜI DÙNG KHÔNG? HÀNH ĐỘNG NÀY KHÔNG THỂ HOÀN TÁC!');">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="confirmationPassword" class="form-label">Nhập chuỗi xác nhận để tiếp tục: <strong>DELETE_ALL_MY_USERS_NOW_PLEASE_IM_SURE_12345</strong></label>
            <input type="text" id="confirmationPassword" name="confirmationPassword" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-danger btn-lg">XÓA TOÀN BỘ NGƯỜI DÙNG NGAY BÂY GIỜ</button>
    </form>
</div>