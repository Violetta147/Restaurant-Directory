@using Microsoft.AspNetCore.Identity
@using PBL3.Models


@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PBL3</title>
    @* <script type="importmap"></script> *@ @* Thường không cần thiết với Bootstrap 5 và jQuery truyền thống *@    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PBL3.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        .fishloot-navbar {
            background-color: #9FFFCB;
            padding: 15px 0;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
        }

        .fishloot-logo {
            height: 36px;
            margin-right: 5px;
            margin-left: 5px;
        }

        .fishloot-search-container {
            display: flex;
            flex-grow: 1;
            max-width: 900px;
        }

        .search-inputs-group {
            display: flex;
            width: 100%;
        }

        .fishloot-search-input {
            border-radius: 4px 0 0 4px;
            border: 1px solid #7AE582;
            padding: 8px 16px;
            width: 45%;
            font-size: 14px;
        }

        .location-input-container {
            position: relative;
            width: 55%;
        }

        .fishloot-search-location {
            border-radius: 0;
            border: 1px solid #7AE582;
            border-left: none;
            padding: 8px 16px;
            width: 100%;
            font-size: 14px;
        }

        .location-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid #7AE582;
            border-top: none;
            display: none;
            z-index: 1000;
        }

        .location-dropdown.show {
            display: block;
        }

        .dropdown-item {
            display: block;
            width: 100%;
            padding: 8px 16px;
            background: none;
            border: none;
            text-align: left;
            cursor: pointer;
            font-size: 14px;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }

        .fishloot-search-button {
            background-color: #25A18E;
            color: white;
            border: none;
            border-radius: 0 4px 4px 0;
            padding: 8px 16px;
            cursor: pointer;
        }

        .fishloot-nav-links {
            margin-left: 20px;
            display: flex;
            align-items: center;
        }

        .fishloot-nav-link {
            color: #333;
            margin: 0 12px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }

        .fishloot-signup-button {
            background-color: #25A18E;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            font-weight: bold;
            margin-left: 10px;
            cursor: pointer;
        }

        .fishloot-login-button {
            background-color: transparent;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px 16px;
            font-weight: bold;
            margin-left: 10px;
            cursor: pointer;
        }

        .fishloot-name {
            font-size: 1.0rem;
            /* adjust as needed */
            font-weight: 600;
            color: #004E64;
            /* match your theme */
            white-space: nowrap;
            line-height: 1;
            margin-right: 5px;
        }

        /* Thêm style cho nút logout nếu cần */
        .fishloot-logout-button {
            background-color: transparent;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px 16px;
            font-weight: bold;
            margin-left: 10px;
            cursor: pointer;
        }
    </style>
</head>

<body class="@ViewData["BodyClass"]">
    <!-- Add a wrapper div with display: flex for proper layout -->
    <div class="page-wrapper" style="display: flex; flex-direction: column; min-height: 100vh;">
        <header>
            <nav class="fishloot-navbar">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between w-100">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/trans_bg.png" alt="fishloot" class="fishloot-logo"
                                onerror="this.src='/api/placeholder/120/36'; this.onerror=null;">
                            <span class="fishloot-name">FISHLOOT</span>
                        </a>
                        <form action="@Url.Action("Index", "Search")" method="get" class="fishloot-search-container"
                            id="navbarSearchForm" autocomplete="off">
                            <div class="search-inputs-group">
                                <input type="text" name="searchTerm" class="fishloot-search-input" autocomplete="off"
                                    autocapitalize="off" autocorrect="off" spellcheck="false"
                                    placeholder="Kinda Hungry huh? Go loot some fishes!" />
                                <div class="location-input-container">
                                    <input type="text" name="Address" id="navbarLocationInput"
                                        class="fishloot-search-location" autocomplete="off" autocapitalize="off"
                                        autocorrect="off" spellcheck="false"
                                        placeholder="Even how large the ocean are, we can still reach you" />
                                    <div id="location-suggestion" class="location-dropdown">
                                        <button type="button" id="navbarUseCurrentLocation" class="dropdown-item"><i
                                                class="fas fa-map-marker-alt"></i> Sử dụng vị trí hiện tại</button>
                                    </div>
                                </div>
                                <button class="fishloot-search-button" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            <input type="hidden" name="lat" id="navbarLat" />
                            <input type="hidden" name="lng" id="navbarLng" />
                        </form>

                        <div class="fishloot-nav-links">
                            <a asp-controller="Restaurants" asp-action="Create" class="fishloot-nav-link">Loot your
                                business</a>
                            <a href="#" class="fishloot-nav-link">Write a Review</a>
                            <a href="#" class="fishloot-nav-link">Start a Project</a>

                            @if (SignInManager.IsSignedIn(User))
                            {
                                <span class="fishloot-nav-link">Hello @UserManager.GetUserName(User)!</span>
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm"
                                    class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="fishloot-logout-button">Logout</button>
                                </form>
                            }
                            else
                            {
                                <button type="button" class="fishloot-login-button" id="loginModalButton"> @* THAY ĐỔI Ở ĐÂY *@
                                    Log In
                                </button>
                                <button type="button" class="fishloot-signup-button" id="registerModalButton">
                                    @* THAY ĐỔI Ở ĐÂY *@
                                    Đăng ký
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        
        <!-- Main content will auto-expand to fill space -->
        <div style="flex: 1 1 auto; display: flex; flex-direction: column;">
            @if (ViewData["BodyClass"]?.ToString() == "search-page")
            {
                <main role="main" style="padding: 0; margin: 0;">
                    @RenderBody()
                </main>
            }
            else
            {
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
        </div>        <footer class="border-top footer text-muted" style="flex-shrink: 0; margin-top: 0;">
            <div class="container">
                © 2025 - PBL3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div> <!-- End page-wrapper -->    
    <!-- Modal Placeholders -->
    <div id="loginModalPlaceholder"></div>
    <div id="registerModalPlaceholder"></div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Search functionality scripts *@
    <script src="~/js/search/search-storage.js" asp-append-version="true"></script>
    <script src="~/js/search/search-validation.js" asp-append-version="true"></script>
    <script src="~/js/search/search-core.js" asp-append-version="true"></script>
    <script src="~/js/search/search-ui.js" asp-append-version="true"></script>
    <script src="~/js/search/search-init.js" asp-append-version="true"></script>

    @* Script để parse validation cho form trong modal nếu dùng jQuery Unobtrusive Validation *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
